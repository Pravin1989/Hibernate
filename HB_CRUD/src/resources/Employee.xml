<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.pravin.hb.Employee" table="table_employee">
		<id name="id" type="integer" column="ID">
			<generator class="increment" />
		</id>
		<property name="name" type="string" column="NAME" not-null="true" />
		<property name="salary" type="integer" column="SALARY" not-null="true" />
		<property name="city" type="string" column="CITY" not-null="true" />
		<property name="phone" type="integer" column="PHONE"
			not-null="true" />
	</class>
</hibernate-mapping>